{
  "name": "security-assessment-system",
  "version": "1.0.0",
  "description": "A local Windows-based security assessment system",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "bootstrap": "^5.3.0",
    "chart.js": "^4.3.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.13.3",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.security.assessment",
    "productName": "Security Assessment System",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "build/icon.png",
      "uninstallerIcon": "build/icon.png",
      "uninstallDisplayName": "Security Assessment System",
      "license": "license.txt",
      "createDesktopShortcut": true,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true
    }
  }
}
